# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.Apps.index

GET     /user/new                   controllers.UserController.displayCreateUser
POST    /user/create                controllers.UserController.create

GET     /team/new                   controllers.TeamController.displayCreateTeam
POST    /team/create                controllers.TeamController.create
GET     /team/list                  controllers.TeamController.displayTeamList

GET     /:teamName/task/new                   controllers.TaskController.displayCreateTaskMst(teamName: String)
POST    /task/create                          controllers.TaskController.create
GET     /:teamName/task/list/:dateStr         controllers.TaskController.displayTaskListWithDate(teamName: String, dateStr: String)
GET     /:teamName/task/list                  controllers.TaskController.displayTaskList(teamName: String)


# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)